<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/image_man" />

    <RelativeLayout
        android:id="@+id/relative_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="lastName firstName"
            android:textColor="@color/black87"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/label_birth_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="@string/birthday_label"
            android:textColor="@color/black38"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/birth_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_birth_day"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="@string/birthday_label"
            android:textColor="@color/black87"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/label_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birth_day"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="@string/profession_label"
            android:textColor="@color/black38"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_profession"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="@string/profession_label"
            android:textColor="@color/black87"
            android:textSize="16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profession"
            android:layout_marginTop="28dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/push_label"
                android:textColor="@color/black87"
                android:textSize="16sp"
                android:textStyle="normal" />

            <Switch
                android:id="@+id/push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:checked="true" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/upper_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/relative_profile_info"
        android:layout_marginTop="18dp"
        android:background="@color/separator" />

    <RelativeLayout
        android:id="@+id/relative_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_separator"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/label_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="@string/friends_label"
            android:textColor="@color/black38"
            android:textSize="12sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_friends"
            android:layout_marginTop="6dp" />
    </RelativeLayout>

    <View
        android:id="@+id/lower_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/relative_friends"
        android:layout_marginTop="18dp"
        android:background="@color/separator" />

    <Button
        android:layout_width="166dp"
        android:layout_height="36dp"
        android:layout_below="@id/lower_separator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryGreen"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.04"
        android:text="@string/exit_button"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>