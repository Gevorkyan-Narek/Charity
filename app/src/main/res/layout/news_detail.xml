<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/event_toolbar_title"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/toolbarButtonMargin"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="11"
                android:gravity="center"
                android:maxLines="1"
                app:layout_constraintEnd_toStartOf="@id/share"
                app:layout_constraintStart_toEndOf="@id/back"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Спонсоры отремонитруют аовлаовла" />

            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_title"
                app:layout_constraintEnd_toStartOf="@id/share" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/toolbarButtonMargin"
                android:src="@drawable/share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/help_bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/event_toolbar_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:layout_marginTop="@dimen/detailNewsTitleMargin"
                android:layout_marginEnd="@dimen/detailNewsTitleMargin"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/blue_grey"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Спонсоры отремонтируют школу-интернат" />

            <ImageView
                android:id="@+id/icon_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_title"
                app:tint="@color/dark_gray" />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/dark_gray"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/icon_cal"
                app:layout_constraintStart_toEndOf="@id/icon_cal"
                app:layout_constraintTop_toTopOf="@id/icon_cal"
                tools:text="Осталось 13 дней (21.09 – 20.10)" />

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/black60"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_date"
                tools:text="Благотворительный Фонд «Счастливый Мир»" />

            <ImageView
                android:id="@+id/nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:layout_marginTop="15dp"
                android:src="@drawable/nav"
                app:layout_constraintEnd_toStartOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/company" />

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textAlignment="textStart"
                android:textColor="@color/black70"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nav"
                app:layout_constraintTop_toTopOf="@id/nav"
                tools:text="Санкт-Петербург, Кирочная улица, д. 50А, каб. 208" />

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:src="@drawable/phone"
                app:layout_constraintEnd_toStartOf="@id/phone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/phone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black70"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/ic_phone"
                app:layout_constraintTop_toBottomOf="@id/address"
                tools:text="+7 (937) 037 37-73\n+7 (937) 016 16-16" />

            <ImageView
                android:id="@+id/ic_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detailNewsTitleMargin"
                android:src="@drawable/mail"
                app:layout_constraintBottom_toBottomOf="@id/ask_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ask_question" />

            <TextView
                android:id="@+id/ask_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/do_you_have_questions"
                android:textColor="@color/black70"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/ic_mail"
                app:layout_constraintTop_toBottomOf="@id/phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:autoLink="email"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:linksClickable="true"
                android:text="@string/write_us"
                android:textColor="@color/colorPrimaryGreen"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/ask_question"
                app:layout_constraintTop_toTopOf="@id/ask_question" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/photo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detailNewsTitleMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ask_question">

                <ImageView
                    android:id="@+id/card_image_1"
                    android:layout_width="205dp"
                    android:layout_height="158dp"
                    android:src="@drawable/cardimage_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/card_image_2"
                    android:layout_width="105dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/cardimage_2"
                    app:layout_constraintStart_toEndOf="@id/card_image_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/card_image_3"
                    android:layout_width="105dp"
                    android:layout_height="74dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/cardimage_3"
                    app:layout_constraintStart_toEndOf="@id/card_image_1"
                    app:layout_constraintTop_toBottomOf="@id/card_image_2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/descr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detailNewsTitleMargin"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black70"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_layout"
                tools:text="Участники и болельщики смогли весело и активно провести время на «Петербургском благотворительном марафоне» и при этом финансово поучаствовать в помощи детям." />

            <TextView
                android:id="@+id/go_to_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/detailNewsTitleMargin"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:paddingBottom="30dp"
                android:text="@string/go_to_company"
                android:textColor="@color/colorPrimaryGreen"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descr" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray_two"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/detailNewsTitleMargin"
                android:paddingTop="@dimen/detailNewsTitleMargin"
                android:paddingEnd="@dimen/detailNewsTitleMargin"
                android:paddingBottom="@dimen/detailNewsTitleMargin"
                app:layout_constraintTop_toBottomOf="@id/go_to_company">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/avatar_3" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/photo_2" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/avatar_2" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/photo_4" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/avatar_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/like_count"
                    android:textColor="@color/black54"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/help_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/detailNewsTitleMargin"
        android:layout_marginEnd="@dimen/detailNewsTitleMargin"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SmallSP">

        <TextView
            android:id="@+id/helpItems"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:lines="2"
            android:paddingTop="9dp"
            android:text="@string/help_with_things"
            android:textColor="@color/black40"
            android:textSize="10sp"
            android:textStyle="normal"
            app:drawableTopCompat="@drawable/shirt" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/separator_2" />

        <TextView
            android:id="@+id/becomeVolunteer"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:lines="2"
            android:paddingTop="9dp"
            android:text="@string/become_volunteer"
            android:textColor="@color/black40"
            android:textSize="10sp"
            android:textStyle="normal"
            app:drawableTopCompat="@drawable/hands" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/separator_2" />

        <TextView
            android:id="@+id/profHelp"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:lines="2"
            android:paddingTop="9dp"
            android:text="@string/prof_help"
            android:textColor="@color/black40"
            android:textSize="10sp"
            android:textStyle="normal"
            app:drawableTopCompat="@drawable/tools" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/separator_2" />

        <TextView
            android:id="@+id/helpMoney"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:lines="2"
            android:paddingTop="9dp"
            android:text="@string/help_with_money"
            android:textColor="@color/black40"
            android:textSize="10sp"
            android:textStyle="normal"
            app:drawableTopCompat="@drawable/coins" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>