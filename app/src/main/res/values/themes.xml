<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimbirSoft" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorPrimaryGreen</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">#7db354</item>
    </style>

    <style name="TitleCategory">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_olive_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentTextStyle">
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">#b3000000</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>

    <style name="NewsTitle">
        <item name="android:textSize">21sp</item>
        <item name="lineHeight">23sp</item>
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
</resources>