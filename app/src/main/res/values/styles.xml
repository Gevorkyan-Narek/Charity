<resources>
    <!-- Base application theme. -->

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorPrimaryGreen</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProgressBar">
        <item name="colorAccent">#7db354</item>
    </style>

    <style name="TitleCategory">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_olive_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashScreenTextStyle">
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">#b3000000</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="fontFamily">Roboto-Regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black87</item>
    </style>
</resources>